<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
         >
        <ImageView
            android:id="@+id/setting_item_photo"
            android:layout_height="50dip"
            android:layout_width="50dip"
            android:scaleType="fitXY"
            android:src="@drawable/setting_item_photo"
            
            />
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            
          <TextView
            android:id="@+id/setting_item_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:text="账户设置" 
            android:gravity="center_vertical"
            android:textSize="20dip"
            android:textColor="#000"
            />
        
        <ImageView 
            android:id="@+id/setting_item_arrow"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/user_setting_item_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            
            />
            
        </RelativeLayout>
        


        
        
    </LinearLayout>

                <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/devideline_listview" />
    
    
</LinearLayout>
